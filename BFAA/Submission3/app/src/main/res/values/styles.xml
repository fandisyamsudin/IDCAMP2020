<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>

    <style name="TextContent.Title.White">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="TextContent.Title.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextContent.Title.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Subtitle">
        <item name="android:textSize">@dimen/textSubtitle</item>
        <item name="android:textColor">@color/textDarkGrey</item>
    </style>


</resources>