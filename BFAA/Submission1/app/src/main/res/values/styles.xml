<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextContent.Title.White">
        <item name="android:textColor">@color/colorTitleWhite</item>
    </style>

    <style name="TextContent.Title.Small">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextContent.Title.White.Small">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
